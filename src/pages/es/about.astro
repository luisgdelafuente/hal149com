---
import Layout from "../../layouts/Layout.astro";
import { getLangFromUrl } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);

const content = {
  en: {
    title: "About",
    subtitle: "Learn more about HAL149",
    description: "From AI automations to strategic programs, HAL149 is your partner to build and deploy tailored AI strategies that drive real business results.",
    keywords: "HAL149, AI consulting, business optimization, ChatGPT optimization, AI strategy, artificial intelligence consulting",
    author: "HAL149"
  },
  es: {
    title: "Acerca de",
    subtitle: "Conoce más sobre HAL149",
    description: "Desde automatizaciones de IA hasta programas estratégicos, HAL149 es tu socio para construir e implementar estrategias de IA personalizadas que generen resultados empresariales reales.",
    keywords: "HAL149, consultoría IA, optimización empresarial, optimización ChatGPT, estrategia IA, consultoría inteligencia artificial",
    author: "HAL149"
  }
};

const currentContent = content[lang as keyof typeof content];
---

<Layout 
  title={`${currentContent.title} | HAL149`} 
  description={currentContent.description}
  keywords={currentContent.keywords}
  author={currentContent.author}
  type="website"
>
  <div class="bs-container py-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="bs-h1 mb-6">{currentContent.title}</h1>
        <p class="bs-body-text xl:text-xl max-w-2xl mx-auto text-bs-foreground-dark">
          {currentContent.subtitle}
        </p>
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <p class="bs-body-text text-bs-foreground-light leading-relaxed">
          {currentContent.description}
        </p>
      </div>
    </div>
  </div>
</Layout>
