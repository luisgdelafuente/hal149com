---
import { getCollection } from 'astro:content';
import { getLangFromUrl } from '../i18n/ui';
import BlogImage from './BlogImage.astro';

// Get latest 3 posts for the current language
const lang = getLangFromUrl(Astro.url);
const allPosts = await getCollection('posts');
const latestPosts = allPosts
  .filter(post => post.data.lang === lang)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// Content based on language
const content = {
  en: {
    title: "Articles and News",
    subtitle: "Stay updated with our latest thoughts and discoveries",
    viewAll: "View All Posts",
    readMore: "Read More"
  },
  es: {
    title: "Artículos y noticias",
    subtitle: "Mantente actualizado con nuestros últimos pensamientos y descubrimientos",
    viewAll: "Ver Todos los Artículos",
    readMore: "Leer Más"
  }
};

const currentContent = content[lang as keyof typeof content];
---

<section class="bs-container bs-mt-lg" id="news-articles">
  <!-- Header -->
  <div class="text-center">
    <h2 class="bs-h2">{currentContent.title}</h2>
    <p class="bs-body-text xl:text-xl mt-4 max-w-2xl mx-auto text-bs-foreground-dark">
      {currentContent.subtitle}
    </p>
  </div>

  <!-- Posts Grid -->
  {latestPosts.length > 0 ? (
    <div class="bs-mt-md grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 lg:gap-8">
      {latestPosts.map(post => (
        <article class="@container group">
          <div class="relative isolate flex h-full w-full flex-col overflow-hidden rounded-xl bg-bs-surface-0/90 hover:bg-bs-surface-2/70 transition-colors duration-300">
            {post.data.image && (
              <div class="aspect-16-9 overflow-hidden">
                <a href={`/${lang === 'es' ? 'es/' : ''}posts/${post.slug}/`} class="block w-full h-full">
                  <BlogImage 
                    src={post.data.image} 
                    alt={post.data.title}
                    width={400}
                    height={225}
                    class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                    sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  />
                </a>
              </div>
            )}
            <div class="p-4 sm:p-6 flex flex-col gap-3 sm:gap-4 h-full">
              <h3 class="bs-h3 line-clamp-2 flex-grow-0">
                <a href={`/${lang === 'es' ? 'es/' : ''}posts/${post.slug}/`} class="hover:text-bs-foreground-light transition-colors">
                  {post.data.title}
                </a>
              </h3>
              <p class="bs-body-text text-bs-foreground-dark line-clamp-3 flex-grow">
                {post.data.description}
              </p>
              <div class="flex flex-col sm:flex-row sm:items-center gap-1 sm:gap-2 text-sm text-bs-foreground-dark mt-auto">
                <span>{post.data.author}</span>
                <span>•</span>
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                  })}
                </time>
              </div>
            </div>
          </div>
        </article>
        ))}
      </div>
  ) : (
    <!-- No posts message -->
    <div class="text-center bs-mt-md">
      <div class="bg-bs-surface-0/90 rounded-xl p-8 max-w-md mx-auto">
        <svg class="w-16 h-16 text-bs-foreground-dark mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
        <h3 class="bs-h3 mb-2">
          {lang === 'es' ? 'No hay artículos aún' : 'No posts yet'}
        </h3>
        <p class="bs-body-text text-bs-foreground-dark">
          {lang === 'es' 
            ? '¡Vuelve pronto para ver nuestro primer artículo!' 
            : 'Check back soon for our first post!'
          }
        </p>
      </div>
    </div>
  )}

  <!-- View All Button -->
  {latestPosts.length > 0 && (
    <div class="text-center bs-mt-md">
      <a href={`/${lang === 'es' ? 'es/' : ''}posts/`} class="bs-btn inline-block">
        {currentContent.viewAll}
      </a>
    </div>
  )}
</section>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

